<h1>List of battles</h1>

<ul>
    {{#each battles}}
    <li>
        <img src="{{this.imageUrl}}" alt="battle image" height="50px" width="80px">
        <a href="/battles/battle/{{_id}}">{{this.title}}</a>
        {{#if isMine}}
        <span>THIS BATTLE IS YOURS</span>
        {{/if}}
    </li>

    {{/each}}
</ul>

{{#if loggedin}}
<a href="/battles/create-battle">Create battle</a>
{{/if}}